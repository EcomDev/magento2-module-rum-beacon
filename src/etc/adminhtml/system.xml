<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="system">
            <group id="ecomdev_rumbeacon" showInDefault="1" showInWebsite="1" showInStore="1" translate="label comment">
                <label>RUMBeacon Configuration</label>
                <comment>Gather insights into your Core Web Vitals</comment>
                <field id="enabled" showInStore="1" showInWebsite="1" showInDefault="1" translate="label" type="select">
                    <label>Enable data gathering</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="ingestion_url" showInStore="1" showInWebsite="1" showInDefault="1" translate="label comment" type="text">
                    <label>Ingestion endpoint</label>
                </field>
            </group>
        </section>
    </system>
</config>
